<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/tv_Konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="KONFIRMASI PENDAFTARAN"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_namalengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eror"
        android:textSize="20sp"
        android:layout_below="@id/tv_Konfirmasi"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_Pendaftaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eror"
        android:textSize="20sp"
        android:layout_below="@id/tv_namalengkap"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eror"
        android:layout_below="@id/tv_Pendaftaran"
        android:textSize="20sp"
        android:layout_margin="16dp"
        android:textStyle="bold"/>

</RelativeLayout>